<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="account_margin_account_invoice">
        <field name="name">account.invoice.margin.view.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="margin" string="Margin" widget="monetary" groups="sales_team.group_sale_manager"/>
                <field name="margin_percent" widget="progressbar" groups="sales_team.group_sale_manager"/>
            </xpath>
        </field>
    </record>

</odoo>
